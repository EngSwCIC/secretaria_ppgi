<h1><u>Home</u></h1>
<!-- <p>Find me in app/views/home/index.html.erb</p> -->

<% if user_signed_in? %>
  <h3>Usuário atual</h3>
  <p><strong>Nome: </strong><%= current_user.full_name %></p>
  <p><strong>Email: </strong><%= current_user.email %></p>
  <p><strong>Cargo: </strong><%= current_user.role %></p>
  <%= button_to "Sair", destroy_user_session_path, method: :delete %>
  <br/>
  <div style="display: flex; flex-direction: row;">
    <div style="margin-right: 50px"><%= button_to "Requerimentos", requirements_path, :method => :get %></div>
    <div><%= button_to "Solicitações", solicitations_path, :method => :get %></div>
  </div>
<% else %>
  <h3>Entre para acessar o sistema!</h3>
  <p>Você também pode se registrar <small>ou pegar uma conta no arquivo db/seeds.rb</small></p>

  <div style="display: flex; flex-direction: row">
    <%= button_to "Entrar", new_user_session_path, :method => :get %>
    <div style="margin-left: 50px">
      <%= button_to "Requerimentos", requirements_path, :method => :get %>
    </div>
  </div>
<% end %>
