<h1>Início</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% if user_signed_in? %>
  <h3>Usuário atual</h3>
  <p><strong>Nome: </strong><%= current_user.full_name %></p>
  <p><strong>Email: </strong><%= current_user.email %></p>
  <p><strong>Cargo: </strong><%= current_user.role %></p>

  <% if current_user.role == "administrator" %>
    <%= link_to "Atualizar Requisitos", requirements_path %>
    <%= link_to "Lista de Processos", sei_processes_path %>
    <%= link_to "Lista de Credenciamentos", accreditations_path %>
  
  <% else %>
    <%= link_to "Meus Processos Abertos", sei_processes_path %>
  <% end %>
  
    <br/>
    <%= link_to "Sair", destroy_user_session_path, method: :delete %>

<% else %>
  <h3>Entre para acessar o sistema!</h3>
  <p>Você também pode se registrar <small>ou pegar uma conta no arquivo db/seeds.rb</small></p>
  <%= link_to "Entrar", new_user_session_path %>
<% end %>
