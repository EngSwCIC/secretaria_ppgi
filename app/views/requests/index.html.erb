<p id="notice"><%= notice %></p>

<% if (user_signed_in?) %>
  <% if current_user.role == "administrator" %>
    <h1>Lista de Requisições</h1>

    <table>
      <thead>
        <tr>
            <th>Tipos de Requisição</th>
            <th>Nome do Requerente</th>
            <th>Documentos</th>
            <th colspan="3"></th>
        </tr>
      </thead>

      <tbody id="tableResults">
        <% @requests.each do |request| %>
          <tr>
            <td><%= (RequestType.find(request.request_type_id).title)  %></td>
            <td><%= (User.find(request.user_id)).full_name %></td>
            <td><%= request.documents %></td>
            <td><%= link_to 'Show', request %></td>
            <td><%= link_to 'Edit', edit_request_path(request) %></td>
            <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'New Request', new_request_path %>
  <% else %>
    <h3>Você precisa ser administrador para acessar essa Pagina:</h3>
    <a href=<%= root_path %>>voltar</a>
  <% end %>
<% else %>
  <h3>Você precisa estar logado para acessar essa Pagina:</h3>
  <a href=<%= user_session_path %>>Entrar</a>

<% end %>