<p id="notice"><%= notice %></p>

<h1>Informações</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @information.each do |information| %>
      <tr>
        <td><%= information.title %></td>
        <td><%= information.info %></td>
        <td><%= link_to 'Ver', information %></td>
        <% if user_signed_in? and current_user.role == 'administrator' %>
          <td><%= link_to 'Editar', edit_information_path(information) %></td>
          <td><%= link_to 'Destruir', information, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? and current_user.role == 'administrator' %>
  <%= link_to 'Criar Informação', new_information_path %>
<% end %>

<%= link_to 'Voltar', home_index_path %>
