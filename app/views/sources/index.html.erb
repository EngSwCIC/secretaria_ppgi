<h1>Source#index</h1>
<% @sources.each do |source| %>

<p> <%= source.name %> </p>
<%# sem o "=" nao eh aprensentado o retorno da funçao %>
<%= link_to "editar", edit_source_path(source.id)%>
<td><%= link_to 'Remover', source_path(source), method: :delete %></td>
<%= simple_format("\n") %>
<% end %>

<%= link_to "Cadastrar Fonte de Informaçao",  new_source_path, controller: 'sources'%>
<%= link_to 'Voltar', home_index_path %>

<p>Find me in app/views/source/index.html.erb</p>
<p id="notice"><%= notice %></p>

<% if false %>
<h1>Sources</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.name %></td>
        <td><%= link_to 'Show', source %></td>
        <td><%= link_to 'Edit', edit_source_path(source) %></td>
        <td><%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Voltar', home_index_path %>
<%= link_to 'New Source', new_source_path %>

<% end %>

