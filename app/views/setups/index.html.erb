<p id="notice"><%= notice %></p>

<head>
  <link href="https://fonts.googleapis.com/css?family=Calistoga&display=swap&effect=outline  " rel="stylesheet">
</head>
<body>
<div class="font-effect-outline" ><h1>Prazos</h1></div>
</body>
<table>
  <thead>
    <tr>
      <th>Início</th>
      <th>Fim</th>
      <th>Criado em</th>
      <th>Atualizado em </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @setups.each do |setup| %>
      <tr>
        <td><%= formatted_datetime setup.inicio %></td>
        <td><%= formatted_datetime setup.fim %></td>
        <td><%= formatted_datetime setup.created_at %></td>
        <td><%= formatted_datetime setup.updated_at %></td>
        <td><%= button_to 'Mostrar', setup, :method => :get %></td>
        <%if current_user.role == 'administrator' %>
        <td><%= button_to 'Editar', edit_setup_path(setup), :method => :get %></td>
        <td><%= button_to 'Deletar', setup, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == 'administrator'%>
<%= button_to 'Novo prazo', new_setup_path, :method => :get %>
    <% end %>
</br>
<%= button_to 'Voltar', solicitations_path, :method => :get %>
