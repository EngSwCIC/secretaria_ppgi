<h1>Lista de Notificação</h1>
 
<% if @notifications.empty? %>
  <h2>Nenhuma notificação publicada</h2>
<%else %>
  <table>
    <tr>
      <th>Notificação</th>
      <th>Conteúdo</th>
      <% if current_user.role == 'administrator' %>
      <th>Entidade interessda</th>
      <% end %>
      <th colspan="4"></th>
    </tr>
 
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.title %></td>
        <td><%= notification.content %></td>
        <% if current_user.role == 'administrator' %>
        <td><%= notification.interested_group %></td>
        <% end %>
        <td><%= link_to 'Visualizar', notification_path(notification) %></td>
        <% if current_user.role == 'administrator' %>
        <td><%= link_to 'Remover', notification_path(notification), method: :delete %></td>
        <% end %>
      </tr>
    <% end %>
  </table>  
<% end %>
<% if current_user.role == 'administrator' %>
<td><%= link_to 'Criar Lista', new_notification_path, controller: 'notifications' %></td>
<% end %>
<td><%= link_to 'Voltar', home_index_path %></td>
