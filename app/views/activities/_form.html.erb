<div class="jumbotron bg-white padding-bottom-1">
  <div class="container">

    <!-- Formulario -->
    <%= form_with model: @activity, local: true do |form| %>

      <!-- Primeiro campo do formulario -->
      <div class="form-group">
        <%= form.label :title, "Título" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <!-- Segundo campo do formulario -->
      <div class="form-group">
        <%= form.label :description, "Descrição" %>
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <!-- Terceiro campo do formulario -->
      <div class="form-group">
        <%= form.label :date, "Data" %>
        <%= form.date_field :date, order: [:day, :month, :year] %>
      </div>

      <!-- Botao para envio do formulario -->
      <div>
        <%= form.submit "Submeter Atividade", class: "btn btn-success" %>
      </div>

    <% end %>
  </div>
</div>