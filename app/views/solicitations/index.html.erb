<p id="notice"><%= notice %></p>

<head>
  <link href="https://fonts.googleapis.com/css?family=Calistoga&display=swap&effect=outline  " rel="stylesheet">
</head>
<body>
<div class="font-effect-outline" >
  <h1>Solicitações</h1></div>
</body>
<table>
  <thead>
  <tr>
    <th>Tipo</th>
    <th>Data de ida</th>
    <th>Data de retorno</th>
    <th>Origem</th>
    <th>Destino</th>
    <th>Descrição</th>
    <th>Usuário</th>
    <th>Status</th>
    <th colspan="5"></th>
  </tr>
  </thead>


  <% if user_signed_in? %>
    <tbody>
    <% @solicitations.each do |solicitation| %>
      <tr>
        <td><%= map_kind solicitation %></td>
        <td><%= formatted_date solicitation.departure %></td>
        <td><%= formatted_date solicitation.return %></td>
        <td><%= solicitation.origin %></td>
        <td><%= solicitation.destination %></td>
        <td><%= solicitation.description %></td>
        <td><%= solicitation.user.full_name %></td>
        <td><%= map_status solicitation %></td>
        <td><%= link_to 'Mostrar', solicitation %></td>
        <% if current_user.role == 'administrator' %>
          <td><%= link_to 'Editar', edit_solicitation_path(solicitation) %></td>
          <td><%= link_to 'Deletar', solicitation, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          <% if !solicitation.isAccepted %>
            <td><%= link_to 'Aprovar', accept_solicitation_path(solicitation), data: { confirm: 'Você tem certeza?' } %></td>
          <% else %>
            <td></td>
          <%end %>
          <% if !solicitation.isRefused %>
            <td><%= link_to 'Reprovar', refuse_solicitation_path(solicitation), data: { confirm: 'Você tem certeza?' }  %></td>
          <% else %>
            <td></td>
          <%end %>
        <% else %>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        <%end %>

      </tr>
    <% end %>

    <div style=""></div>

    </tbody>

    </table>

    <br>
    <div style="display: flex; flex-direction: row">
      <% if current_user.role == 'administrator' or 'student'%>
        <div style="margin-right: 50px"><%= button_to 'Nova Solicitação', new_solicitation_path, :method => :get %></div>
      <%end%>

      <% if current_user.role == 'administrator' %>
      <%= button_to 'Prazos', setups_path, :method => :get %>
      <% end %>
  <%end %>
  <br/>

  </div>
  </br>
  <%= button_to 'Voltar', home_index_path, :method => :get %>