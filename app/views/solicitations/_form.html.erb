    <%= form.label :Ida %>
    <%= form.date_select :departure, :order => [:day, :month, :year] %>
  </div>

  <div class="field">
    <%= form.label :Retorno %>
    <%= form.date_select :return, :order => [:day, :month, :year] %>
  </div>

  <div class="field">
    <%= form.label :Origem %>
    <%= form.text_field :origin %>
  </div>

  <div class="field">
    <%= form.label :Destino %>
    <%= form.text_field :destination %>
  </div>

  <div class="field">
    <%= form.label "Descrição" %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit  %>
  </div>
<% end %>
