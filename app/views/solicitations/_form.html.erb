      <ul>
      <% solicitation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Tipo %>
    <%= form.select :kind, [['Passagem', 'passagem'], ['Diária', 'diaria']] %>
