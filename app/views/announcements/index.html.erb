<p id="notice"><%= notice %></p>
<html>
<head>
  <link href="https://fonts.googleapis.com/css?family=Calistoga&display=swap&effect=outline  " rel="stylesheet">
</head>
<body>

<div class="font-effect-outline"><h1>Anúncios</h1></div>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Informação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td><%= announcement.body %></td>
        <td><%= button_to 'Mostrar', announcement, :method => :get %></td>

        <% if user_signed_in?  and current_user.role == 'administrator'%>
          <td><%= button_to 'Editar', edit_announcement_path(announcement), :method => :get %></td>
          <td><%= button_to 'Deletar', announcement, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? and current_user.role == 'administrator'%>
      <div>
        <%= button_to 'Novo Anúncio', new_announcement_path, :method => :get %>
      </div>
<% end %>

<br/>

<%= button_to 'Voltar', home_index_path, :method => :get %>