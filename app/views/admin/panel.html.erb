<% if user_signed_in? and current_user.role == 'administrator'%>

<h1>Lista de solicitações e diárias e passagens</h1>

<div style="display:flex;width:100%;justify-content:space-around;">
  <div style="display:flex;flex-direction:column;align-items:center">
    <h2>Diárias</h2>

    <table id="bookings-table" style="display:inline-block;">
      <thead>
        <tr>
          <th>Data de entrada</th>
          <th>Data de saída</th>
          <th>Usuário requisitante</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.data_entrada %></td>
            <td><%= booking.data_saida %></td>
            <td style="text-align:center"><%= booking.user.id %></td>
            <td><%= link_to 'Show', booking %></td>
            <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
            <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div style="display:flex;flex-direction:column;align-items:center">
  <h2>Passagens</h2>
    <table id="tickets-table" style="display:inline-block;">
      <thead>
        <tr>
          <th>Data entrada</th>
          <th>Data saida</th>
          <th>Usuário requisitante</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tickets.each do |ticket| %>
          <tr>
            <td><%= ticket.data_entrada %></td>
            <td><%= ticket.data_saida %></td>
            <td style="text-align:center"><%= ticket.user.id %></td>
            <td><%= link_to 'Show', ticket %></td>
            <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
            <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% else %>
<h1>Você precisa ser administrador para acessar essa página</h1>
<% end %>