<h1>New Requirement</h1>

<%= form_for @requirement, html: { multipart: true } do |f| %>
  <%= f.label "Título" %>
  <%= f.text_field :title %>
  <%= f.label "Conteúdo" %>
  <%= f.text_field :content %>
  <%= f.label "documentos" %>
  <%= f.file_field :documents, multiple: true %>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back', requirements_path %>
